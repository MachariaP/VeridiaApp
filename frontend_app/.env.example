# Backend service URLs (used by Next.js API routes - server-side only)
# These are NOT prefixed with NEXT_PUBLIC_ so they remain server-side

# User Service (authentication)
API_URL=http://localhost:8000

# Content Service (content management)
CONTENT_API_URL=http://localhost:8001

# Verification Service (voting and comments)
VERIFICATION_API_URL=http://localhost:8002

# Search Service (search and discovery)
SEARCH_API_URL=http://localhost:8003

# Client-side API URL (optional - defaults to /api for Next.js API routes)
# Only set this if you need to bypass Next.js API routes and call backend directly
# NEXT_PUBLIC_API_URL=/api
