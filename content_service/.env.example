# Project Configuration
PROJECT_NAME="VeridiaApp Content Submission Service"
API_V1_PREFIX="/api/v1"

# MongoDB Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="veridiapp_content_db"

# JWT Configuration (must match user_service)
# WARNING: JWT_SECRET_KEY MUST be set in production! No default is provided for security.
JWT_SECRET_KEY="your-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"

# File Upload Configuration
UPLOAD_DIR="/tmp/veridiapp_uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
