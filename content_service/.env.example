# Project Configuration
PROJECT_NAME="VeridiaApp Content Submission Service"
API_V1_PREFIX="/api/v1"

# MongoDB Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="veridiapp_content_db"

# JWT Configuration (must match user_service)
# SECURITY WARNING: Generate a strong random secret key for production!
# Command: python -c "import secrets; print(secrets.token_urlsafe(32))"
# This MUST be the same as the JWT_SECRET_KEY in user_service for token validation
JWT_SECRET_KEY="CHANGE_THIS_SECRET_KEY"
JWT_ALGORITHM="HS256"

# File Upload Configuration
UPLOAD_DIR="/tmp/veridiapp_uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
